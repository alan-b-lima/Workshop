%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


%% functionalities %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% front cover %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\jaxkfrontcover}[6]{
    \thispagestyle{empty}
    \begin{center}
        \textbf{#1}\\
        \textbf{#2}\\
        \textbf{#3}

        \vfill
        \textbf{#4}
        \vfill
        
        \textbf{#5}\\
        \textbf{#6}
    \end{center}
    \newpage
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
    
%% table of content %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\jaxktableofcontent}[1]{
    \thispagestyle{empty}
    \renewcommand*\contentsname{\begin{center}#1\end{center}}

    \tableofcontents
    \newpage
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% start body %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\jaxkstartbody}{
    \setlength{\headheight}{14.5pt}

    \setcounter{page}{1}
    \renewcommand{\headrulewidth}{0pt}
    
    \pagestyle{fancy}
    \fancyhf{}
    \fancyhead[R]{\thepage}
    \fancyfoot{}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% section %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newenvironment{jaxksection}[1]{

    \begin{spacing}{3}
        \ifcase\value{jaxksectiondepth}
            \relax
                \stepcounter{jaxkcntfst}
                \setcounter{jaxkcntsnd}{0}

                \newcommand*{\jasksectiontitle}{
                    \uppercase{\textbf{
                        \thejaxkcntfst\jaxkspacing#1
                    }}
                }

                \addcontentsline{toc}{section}{\jasksectiontitle}
                \noindent\jasksectiontitle
            \or
                \stepcounter{jaxkcntsnd}
                \setcounter{jaxkcnttrd}{0}

                \newcommand*{\jasksectiontitle}{
                    \textbf{
                        \thejaxkcntfst.\thejaxkcntsnd\jaxkspacing#1
                    }
                }

                \addcontentsline{toc}{section}{\jasksectiontitle}
                \noindent\jasksectiontitle
            \or
                \stepcounter{jaxkcnttrd}
                \setcounter{jaxkcntfrth}{0}

                \newcommand*{\jasksectiontitle}{
                    \textbf{\textit{
                        \thejaxkcntfst.\thejaxkcntsnd.\thejaxkcnttrd.\jaxkspacing#1
                    }}
                }

                \addcontentsline{toc}{section}{\jasksectiontitle}
                \noindent\jasksectiontitle
            \or
                \stepcounter{jaxkcntfrth}
                \setcounter{jaxkcntffth}{0}
            
                \newcommand*{\jasksectiontitle}{
                    \textit{
                        \thejaxkcntfst.\thejaxkcntsnd.\thejaxkcnttrd.\thejaxkcntfrth\jaxkspacing#1
                    }
                }

                \addcontentsline{toc}{section}{\jasksectiontitle}
                \noindent\jasksectiontitle
            \or
                \stepcounter{jaxkcntffth}
            
                \newcommand*{\jasksectiontitle}{
                    \textit{\underline{
                        \thejaxkcntfst.\thejaxkcntsnd.\thejaxkcnttrd.\thejaxkcntfrth.\thejaxkcntffth\jaxkspacing#1
                    }}
                }

                \addcontentsline{toc}{section}{\jasksectiontitle}
                \noindent\jasksectiontitle
        \else
            \PackageError{jaxk}{Unsuported depth}{Only five levels, you should rethink your work}
        \fi
    \end{spacing}

    \stepcounter{jaxksectiondepth}
}{
    \addtocounter{jaxksectiondepth}{-1}
}
